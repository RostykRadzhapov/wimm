<h2>Registration</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="three columns small-top-pading">
      <%= f.label :email %>
    </div>

    <div class="three columns">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>  
  </div>


  <div class="row">
    <div class="three columns small-top-pading">
      <%= f.label :password %>
    </div>

    <div class="three columns">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div> 
  </div>

  <div class="row">
    <div class="three columns small-top-pading">
      <%= f.label :confirm_password %>
    </div>

    <div class="three columns">
      <%= f.password_field :confirm_password, autocomplete: "new-password" %>
    </div>  
  </div>

  <div class="row">
    <div class="three columns"> â€Ž</div>
    <div class="three columns">
      <%= f.submit "Register" %>  
    </div>
  </div>
<% end %>

