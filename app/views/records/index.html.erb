<h2>Records</h2>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Account</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.amount %></td>
        <td><%= record.account.name %></td>
        <td><%= record.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
