<div class="row">
  <div class="six columns">
    <%= form_for @record do |f| %>
     <label>Record</label>
      <%= f.text_field :amount, placeholder: "New record amount" %>
      <%= select("record", :account_id, @accounts.collect {|a| [ a.name, a.id ] }) %>
      <%= select("record", :category_id, @categories.where(type: @record.category.type).collect {|c| [ c.name, c.id ] }) %>
      <div>
        <%= f.submit 'Submit', class: "button-secondary" %>
        <%= link_to 'Back', records_path%>
      </div>
    <% end %>
  </div>
</div>
