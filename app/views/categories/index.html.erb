<div class="row">
  <div>
    <h5>Expense category:</h5>

    <ul>
      <% @expense_categories.each do |category| %>
        <li>
          <%= link_to category.name, edit_category_path(category) %>
          <%= maybe_favorite_category_tag(category) %>
        </li>
      <% end %>
    </ul>
  </div>

  <div>
    <h5>Income category:</h5>
    <% @income_categories.each do |category| %>
      <ul><%= link_to category.name, edit_category_path(category) %></ul>
    <% end %>
  </div>

  <div>
    <%= link_to "Add", new_category_path, class: "button button-secondary" %>
  </div>
</div>
