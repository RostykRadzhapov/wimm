<div class="row">
  <div class="six columns">
    <%= form_for @category do |f| %>
     <label>Category name</label>
      <%= f.text_field :name, placeholder: "New category name" %>
      <div>
        <%= f.submit 'Submit', class: "button-secondary" %>
        <%= link_to 'Back', categories_path%>
      </div>
    <% end %>
  </div>
</div>
