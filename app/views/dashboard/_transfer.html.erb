<%= form_for(:transfers, local: true, url: transfers_path, html: { id: 'transfer-form' }) do |form| %>

  <tr class="field">
    <%= form.label :from_account_id, 'From' %>
    <%= form.select :from_account_id, accounts.pluck(:name, :id), { include_blank: false }, { class: 'dashboard_field' } %>
  </tr>

  <tr class="field">
    <%= form.label :to_account_id, 'To' %>
    <%= form.select :to_account_id, accounts.pluck(:name, :id), { include_blank: false }, { class: 'dashboard_field' } %>
  </tr>

  <tr class="field">
    <%= form.label :transfer %>
    <%= form.text_field :transfer, required: true, class: 'amount_field' %>
  </tr>

  <tr class="actions">
    грн <%= form.submit 'Submit' %>
  </tr>
<% end %>
