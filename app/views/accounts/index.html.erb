<div class="row">
 <div class="two columns">
     <%= link_to "Add account", new_account_path, class: "button button secondary" %>
  </div>
</div>
<div class="row"> 
  <div class="two columns">
    <table class="u-full-width">
      <thead>
        <tr>
          <th>Account</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td><%= account.name %></td>
            <td><%= account.balance %></td>
            <td> <%= link_to "Edit", edit_account_path(account), class: "button button secondary" %></td>
            <td> <%= link_to "Delete", account_path(account), class: "button button secondary", method: :delete, 
                      data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
