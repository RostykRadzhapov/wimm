<div class="row">

  <div class="three columns">
    <ul><%= link_to 'Categorized expenses', reports_category_reports_path %></ul>
    <ul><%= link_to 'Monthly balance' %></ul>
    <ul><%= link_to 'Yearly expenses', yearly_expenses_reports_path %></ul>
  </div>

  <div class="nine columns">
    <div class="center">
      <div>
        <%= form_tag(reports_category_reports_path, method: 'get') do %>
          <%= date_field_tag(:from, start_period) %>
          <%= date_field_tag(:to, end_period) %>
          <%= submit_tag("Filter") %>
        <% end %>
      </div>
      <div>
        <%= pie_chart Reports::CategoryReportsQuery.new(current_user).period_sum(start_period || Date.today.at_beginning_of_month, end_period || Date.today), defer: false %>
      </div>
      <div>
        <%= this_month_link(:reports_category_reports_path) %>
        <%= previous_month_link(:reports_category_reports_path) %>
      </div>
      <div>
        <%= this_year_link(:reports_category_reports_path) %>
        <%= previous_year_link(:reports_category_reports_path) %>
      </div>
    </div>
  </div>

</div>
